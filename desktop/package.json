{
  "name": "chatzilla-desktop",
  "version": "1.2.0",
  "description": "Chatzila desktop app",
  "main": "./dist/index.js",
  "scripts": {
    "compile": "tsc",
    "watch": "tsc -w",
    "electron": "wait-on tcp:3000 && electron ./dist/index.js",
    "start": "npm run compile && concurrently -k \"cd .. && cd client && npm run start:for:electron\" \"npm run electron\"",
    "build:react": "cd .. && cd client && npm run build && cd .. && cd desktop ",
    "build:win": "rm -rf build && npm run compile && electron-builder --win",
    "build:linux": "npm run compile && electron-builder --linux",
    "build:mac": "npm run compile && electron-builder --mac",
    "build:all": "npm run compile && electron-builder -mwl"
  },
  "author": "Poujhit <poujhit.dev@gmail.com>",
  "license": "MIT",
  "build": {
    "appId": "com.poujhit.chatzilla",
    "productName": "Chatzilla",
    "win": {
      "icon": "icons/icon.png",
      "target": "nsis",
      "publish": [
        "github"
      ]
    },
    "linux": {
      "icon": "icons/icon.png",
      "target": [
        "deb",
        "AppImage",
        "snap",
        "tar.gz",
        "rpm"
      ],
      "category": "Utility"
    },
    "extraMetadata": {
      "main": "dist/index.js"
    },
    "directories": {
      "output": "./build"
    },
    "extends": null
  },
  "devDependencies": {
    "concurrently": "^6.2.1",
    "cross-env": "^7.0.3",
    "electron": "^14.0.0",
    "electron-builder": "^22.11.7",
    "typescript": "^4.4.2",
    "wait-on": "^6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Poujhit/Chatzilla"
  },
  "homepage": "https://github.com/Poujhit/Chatzilla"
}
